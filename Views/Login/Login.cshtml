@model BBT_Plataforma_Establecimientos_De_Salud.Models.DB.Usuario
@{
    ViewData["Title"] = "Login";
}
<div class=" row justify-content-center">
    <div class="col-lg-6">
        <h1 class="text-center mb-4">Log In</h1>
        <form asp-controller="Login" asp-action="Login" method="post">
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Contrasena">Contraseña</label>
                <input asp-for="Contrasena" class="form-control" type="password" />
                <span asp-validation-for="Contrasena" class="text-danger"></span>
            </div>

            @*    <div class="form-group form-check">
            <input type="checkbox" asp-for="Recuerdame" class="form-check-input" />
            <label class="form-check-label" asp-for="Recuerdame">Recuérdame</label>
            </div>*@

            <button type="submit" class="btn btn-primary">Iniciar sesión</button>
        </form>
    </div>
</div>